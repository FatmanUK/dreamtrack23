controlgroup wheel
hostname
persistent
option domain_name_servers, domain_name, domain_search
option classless_static_routes
option interface_mtu
option ntp_servers
option rapid_commit
require dhcp_server_identifier

interface eth0
  static ip_address={{ ansible_host_prefix }}
  static routers={{ host_gateway }}
  static domain_name_servers={{ host_dns_servers | join(',') }}
  static domain_search={{ domain }}
  noipv6
  noipv4ll
  nodhcp
