*nat

:LIBVIRT_PRT - [0:0]
-A LIBVIRT_PRT -s 10.2.0.0/16 -d 224.0.0.0/24 -j RETURN
-A LIBVIRT_PRT -s 10.2.0.0/16 -d 255.255.255.255/32 -j RETURN
-A LIBVIRT_PRT -s 10.2.0.0/16 ! -d 10.2.0.0/16 -j MASQUERADE
-A LIBVIRT_PRT -s 10.2.0.0/16 ! -d 10.2.0.0/16 -p udp -j MASQUERADE --to-ports 1024-65535
-A LIBVIRT_PRT -s 10.2.0.0/16 ! -d 10.2.0.0/16 -p tcp -j MASQUERADE --to-ports 1024-65535
-A LIBVIRT_PRT -s 192.168.100.0/24 -d 224.0.0.0/24 -j RETURN
-A LIBVIRT_PRT -s 192.168.100.0/24 -d 255.255.255.255/32 -j RETURN
-A LIBVIRT_PRT -s 192.168.100.0/24 ! -d 192.168.100.0/24 -p tcp -j MASQUERADE --to-ports 1024-65535
-A LIBVIRT_PRT -s 192.168.100.0/24 ! -d 192.168.100.0/24 -p udp -j MASQUERADE --to-ports 1024-65535
-A LIBVIRT_PRT -s 192.168.100.0/24 ! -d 192.168.100.0/24 -j MASQUERADE

:PREROUTING ACCEPT [0:0]
